<style>
#region-main > .card{
    min-height:unset;
    border:unset;
    margin-bottom:unset;
}
.card-block{
    padding:unset;
}
#page-wrapper{
    overflow: hidden;
}
#page{
    margin:unset;
    padding:unset;
}
#region-main-box,
#page.container-fluid{
    padding:unset;
}
#page-wrapper::after{
    min-height:unset;
}

</style>

<div class="efb-form-builder-wrap">
    <!-- Form Toolbar -->
    {{#formid}}
        <input type="hidden" name="id" value="{{formid}}">
    {{/formid}}
    {{#formversion}}
        <input type="hidden" name="version" value="{{formversion}}">
    {{/formversion}}
    <div class="efb-editor-toolbar">
        <div class="efb-editor-logo">
            <div class="efb-editor-logo-wrap">
                <a href="{{config.wwwroot}}"><img class="efb-img" src="{{logo}}"/></a>
            </div>
        </div>
        <div class="efb-editor-action {{^panelsetup.title}}efb-hide{{/panelsetup.title}}">
            <div class="efb-editor-action-title">
                <label id="efb-form-cur-action">{{form_action}}</label>
                <span class="efb-form-title">{{panelsetup.title}}</span>
            </div>
        </div>
        <div class="efb-editor-buttons">
            <!-- Adding id to identify buttons individually -->
            {{#headerbutton}}
            <div class="efb-editor-button {{class}}">
                <a class="btn btn-primary efb-form-icon-btn" {{#id}}id="{{id}}"{{/id}} href="{{url}}">
                    <i class="fa fa-{{icon}}" aria-hidden="true"></i>{{label}}
                </a>
            </div>
            {{/headerbutton}}
        </div>
    </div>

    <div class="efb-forms-editor-body row">
        <!-- Form Panels-->
        <div id="efb-forms-panels-toggle" class="efb-forms-panels-toggle">
            {{#nav_item}}
            <button id="{{id}}" class="efb-panel-btn btn-primary {{#active}}panel-{{active}}{{/active}}" data-panel="{{panelid}}" data-panel-lbl="{{label}}">
                <i class="fa {{icon}}"></i>
                <span>{{label}}</span>
            </button>
            {{/nav_item}}
        </div>
        <div class="efb-form-content">
            <div class="efb-forms-panel-heading">Setup</div>
            <div class="efb-forms-panels">
                <div id="{{panelsetup.id}}" class="efb-tabcontent {{builderactive}}">
                    {{body}}
                    {{> local_edwiserform/_create_form_setup_panel }}
                </div>
                {{#panels}}
                <div id="{{id}}" class="efb-tabcontent content-{{#active}}{{active}}{{/active}}{{^active}}hide{{/active}}">
                    {{{body}}}{{{button}}}
                </div>
                {{/panels}}
            </div>
        </div>
    </div>
</div>
